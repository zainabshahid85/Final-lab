extends ../layout

block content
    h1 Add New Product
    form(action="/products/add",method="post")
        .form-group
            label(for="pId") Product id
            input#name(type="Number", class="form-control", name="Id")
        .form-group
            label(for="name") Product Name
            input#name(type="text", class="form-control", name="name")
        .form-group
            label(for="name") Product Price
            input#name(type="Number", class="form-control", name="price")
        .form-group
            label(for="name") Product Catagory
            input#name(type="text", class="form-control", name="catagory")
        .form-group
            label(for="price") Product Details
            input#price(type="text", class="form-control", name="details")
        input(type="submit", class="btn btn-info")
    